<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.risticpe.risticpe_fueltrack"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity
            android:name=".FuelTrackActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NewLogEntryActivity"
            android:label="@string/title_activity_log_edit"
            android:windowSoftInputMode="stateUnchanged|adjustPan">
        </activity>
        <activity
            android:name=".LogEntryViewActivity"
            android:label="@string/title_activity_log_entry_view"
            android:noHistory="true"
            android:theme="@style/MyTheme">
        </activity>
    </application>

</manifest>
